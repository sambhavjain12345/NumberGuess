import java.util.Random;
import java.util.Scanner;

public class numberguessinggame {

    public static int playGame(Scanner scanner) {
        Random random = new Random();
        int numberToGuess = random.nextInt(100) + 1; 
        int attemptsLeft = 7;
        int userGuess;

        System.out.println("\nI'm thinking of a number between 1 and 100.");
        System.out.println("You have " + attemptsLeft + " attempts to guess it.");

        while (attemptsLeft > 0) {
            System.out.print("Enter your guess: ");

          
            while (!scanner.hasNextInt()) {
                System.out.print("Please enter a valid number: ");
                scanner.next();
            }

            userGuess = scanner.nextInt();

            if (userGuess < 1 || userGuess > 100) {
                System.out.println("Guess must be between 1 and 100.");
                continue;
            }

            attemptsLeft--;

            if (userGuess == numberToGuess) {
                System.out.println("üéâ Correct! You guessed the number in " + (7 - attemptsLeft) + " attempts.");
                return 1; // 1 point for a win
            } else if (userGuess < numberToGuess) {
                System.out.println("Too low.");
            } else {
                System.out.println("Too high.");
            }

            if (attemptsLeft > 0) {
                System.out.println("Attempts left: " + attemptsLeft);
            } else {
                System.out.println("‚ùå You've run out of attempts. The number was: " + numberToGuess);
            }
        }

        return 0;
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int roundsPlayed = 0;
        int roundsWon = 0;
        String playAgain;

        System.out.println("===== Welcome to the Number Guessing Game =====");

        do {
            roundsPlayed++;
            roundsWon += playGame(scanner);

            System.out.print("\nWould you like to play again? (yes/no): ");
            playAgain = scanner.next().toLowerCase();

        } while (playAgain.equals("yes") || playAgain.equals("y"));

        System.out.println("\n===== Game Over =====");
        System.out.println("Rounds played: " + roundsPlayed);
        System.out.println("Rounds won: " + roundsWon);
        System.out.println("Thanks for playing!");

        scanner.close();
    }
}
